name: Android APK Builder

on:
  workflow_dispatch:
  push:
    branches:
      - main

jobs:
  build:
    runs-on: ubuntu-24.04
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Install tools
        run: |
          sudo apt-get update
          sudo apt-get install -y unzip openjdk-17-jdk

      - name: Unzip project
        run: unzip fastdl-android.zip -d fastdownloader

      - name: Make gradlew executable
        run: chmod +x fastdownloader/gradlew

      - name: Build APK
        working-directory: fastdownloader
        run: ./gradlew assembleRelease

      - name: Upload APK artifact
        uses: actions/upload-artifact@v4
        with:
          name: FastDownloader-APK
          path: fastdownloader/app/build/outputs/apk/release/*.apk
